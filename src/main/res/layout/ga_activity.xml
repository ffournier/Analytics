<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2">

    <Button android:id="@+id/ga_button_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Session"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="0"/>

    <Button android:id="@+id/ga_button_createcrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Crash"
        android:layout_gravity="center_horizontal"
        android:layout_column="1"
        android:layout_row="0"/>

    <Button android:id="@+id/ga_button_interceptcrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intercept Crash"
        android:layout_gravity="center_horizontal"
        android:layout_column="0"
        android:layout_row="1"/>

    <Button android:id="@+id/ga_button_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen"
        android:layout_gravity="center_horizontal"
        android:layout_column="1"
        android:layout_row="1"/>

    <Button android:id="@+id/ga_button_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metric and Dimen"
        android:layout_gravity="center_horizontal"
        android:layout_column="0"
        android:layout_row="2"/>

    <Button android:id="@+id/ga_button_event1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event 1"
        android:layout_gravity="center_horizontal"
        android:layout_column="1"
        android:layout_row="2"/>

    <Button android:id="@+id/ga_button_event2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event 2"
        android:layout_gravity="center_horizontal"
        android:layout_column="0"
        android:layout_row="3"/>

    <Button android:id="@+id/ga_button_socialinteraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Interaction"
        android:layout_gravity="center_horizontal"
        android:layout_column="1"
        android:layout_row="3"
        />

    <Button android:id="@+id/ga_button_userTiming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start User Timing"
        android:layout_gravity="center_horizontal"
        android:layout_column="0"
        android:layout_row="4"/>

    <Button android:id="@+id/ga_button_campaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campaign"
        android:layout_gravity="center_horizontal"
        android:layout_column="1"
        android:layout_row="4"/>

    <Button android:id="@+id/ga_button_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction"
        android:layout_gravity="center_horizontal"
        android:layout_column="0"
        android:layout_row="5"/>

    <Button android:id="@+id/ga_button_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promotion"
        android:layout_gravity="center_horizontal"
        android:layout_column="1"
        android:layout_row="5"/>

</GridLayout>