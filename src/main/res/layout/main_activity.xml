<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/main_button_ga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ga"
            android:text="@string/ga"/>

    <Button android:id="@+id/main_button_countly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/countly"
        android:text="@string/countly"/>

    <Button android:id="@+id/main_button_flurry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/flurry"
        android:text="@string/flurry"/>

</LinearLayout>